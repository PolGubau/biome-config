{
  "license": "MIT",
  "name": "@polgubau/biome-config",
  "version": "0.0.3",

  "description": "Personal Biome config for React related projects.",
  "keywords": ["biome", "biomejs", "config", "configuration", "pol", "polgubau"],
  "author": "Pol Gubau Amores",
  "contributors": ["Pol Gubau Amores <gubaupol@gmail.com>"],
  "type": "module",
  "exports": {
    ".": "./biome.json"
  },
  "main": "biome.json",
  "files": [],
  "scripts": {
    "check-biome": "biome rage --formatter --linter",
    "format": "pnpm format:code && pnpm format:pkgJson",
    "format:code": "biome check --write --verbose",
    "lint": "pnpm lint:code && publint",
    "lint:code": "biome lint --verbose",
    "publint": "npx publint --strict",
    "ci": "pnpm i && pnpm check-biome pnpm lint"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "publint": "0.2.7"
  },
  "peerDependencies": {
    "@biomejs/biome": ">=1.9.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
